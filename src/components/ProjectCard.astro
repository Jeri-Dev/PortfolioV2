---
export interface Props {
	title: string
	description: string
	image: string
	projectUrl?: string
	githubUrl?: string
	type: "web" | "app" | "api"
	reverse?: boolean
}

const {
	title,
	description,
	image,
	projectUrl,
	githubUrl,
	type,
	reverse = false,
} = Astro.props

const typeColors = {
	web: "bg-blue-500",
	app: "bg-green-500",
	api: "bg-purple-500",
}

const typeLabels = {
	web: "Web Application",
	app: "Mobile App",
	api: "API",
}
---

<div class="group grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
	<div
		class={`relative overflow-hidden rounded-lg shadow-lg ${reverse ? "md:order-2" : ""}`}
	>
		<div
			class="aspect-video bg-cover bg-center"
			style={`background-image: url("${image}");`}
		>
		</div>
		<div
			class="absolute inset-0 bg-primary/20 opacity-0 group-hover:opacity-100 transition-opacity"
		>
		</div>
		<div class="absolute top-4 left-4">
			<span
				class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold text-white ${typeColors[type]}`}
			>
				{typeLabels[type]}
			</span>
		</div>
	</div>
	<div class={`flex flex-col gap-2 ${reverse ? "md:order-1" : ""}`}>
		<h3 class="text-2xl font-bold text-slate-900 dark:text-white">
			{title}
		</h3>
		<p class="text-slate-600 dark:text-slate-400">
			{description}
		</p>
		<div class="mt-4 flex items-center gap-4">
			{
				projectUrl && (
					<a
						class="inline-flex items-center justify-center rounded-lg px-5 py-2.5 text-sm font-semibold text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background-light dark:focus:ring-offset-background-dark transition-all"
						href={projectUrl}
						target="_blank"
						rel="noopener noreferrer"
					>
						View Project
					</a>
				)
			}
			{
				githubUrl && (
					<a
						class="inline-flex items-center justify-center rounded-lg px-5 py-2.5 text-sm font-semibold text-slate-700 dark:text-slate-300 bg-slate-200 dark:bg-slate-800 hover:bg-slate-300 dark:hover:bg-slate-700 transition-colors"
						href={githubUrl}
						target="_blank"
						rel="noopener noreferrer"
					>
						GitHub
					</a>
				)
			}
		</div>
	</div>
</div>
